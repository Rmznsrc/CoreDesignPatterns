@model DesignPattern.Mediator.MediatorPattern.Commands.CreateProductCommand
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<div class="container">
    <br /><br />
    <form method="POST">
     
        <label>Ürün Adı</label>
        <input class="form-control" type="text" asp-for="ProductName" />
        <br />
        <label>Ürün Fiyatı</label>
        <input class="form-control" type="text" asp-for="ProductPrice" />
        <br />
        <label>Ürün Stok Türü</label>
        <input class="form-control" type="text" asp-for="ProductStockType" />
        <br />
        <label>Ürün Stok Sayısı</label>
        <input class="form-control" type="text" asp-for="ProductStock" />
        <br />
        <label>Ürün Kategori</label>
        <input class="form-control" type="text" asp-for="ProductCategory" />
        <br />
        <button class="btn btn-primary" type="submit">Ekle</button>
    </form>
</div>