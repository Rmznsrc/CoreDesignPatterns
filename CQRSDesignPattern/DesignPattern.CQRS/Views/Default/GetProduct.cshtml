@model DesignPattern.CQRS.CQRSPattern.Results.GetProductByIDQueryResult
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<div class="container">
    <br />
    <form method="get">
        <label>Ürün ID</label>
        <input type="text" class="form-control" asp-for="ProductID" />
        <br />
        <label>Ürün Adı</label>
        <input type="text" class="form-control" asp-for="Name" />
        <br />
        <label>Stok</label>
        <input type="text" class="form-control" asp-for="Stock" />
        <br />
        <label>Ücret</label>
        <input type="text" class="form-control" asp-for="Price" />
        <br />
      
        <button type="submit" class="btn btn-dark">Ürünü Ekle</button>
        <br />
    </form>
</div>